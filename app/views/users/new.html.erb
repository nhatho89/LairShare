<h1>Sign Up</h1>

<div class="signin-outter-container">
  <img class="signin-background" src="/assets/castle.jpg">
  </img>
  <div class='sign-in-container'>
    <form class="signin-form"action="<%= users_url %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class='username-container'>
        <label class="username-label">
          Username
        </label>
          <input class="username-input-field" type="text" name="user[username]">
        <br>
      </div>

      <div class='password-container'>
        <label class="password-label">
          Password
        </label>
          <input class="password-input-field" type="password" name="user[password]">
        <br>
      </div>

      <div class='submit-button-container'>
        <input type="submit" value="Sign Up">
      </div>


    </form>
